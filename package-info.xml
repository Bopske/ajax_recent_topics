<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>AirRideTalk:ajax_recent_topics</id>
	<name>AJAX Recent Topics</name>
	<version>2.0</version>
	<type>modification</type>

	<install for="2.1.*">
		<require-file name="Subs-recent_top.php" destination="$sourcedir" />
		<require-file name="Recent_top.php" destination="$sourcedir" />
		<require-file name="Recent_top_xml_output.php" destination="$sourcedir" />
		<require-file name="Recent_top.template.php" destination="$themedir" />
		<require-dir name="languages" destination="$themedir" />
		<database>install21.php</database>
		<hook hook="integrate_actions" function="recent_top_action" file="$sourcedir/Subs-recent_top.php" />
		<hook hook="integrate_menu_buttons" function="recent_top__menu_button" file="$sourcedir/Subs-recent_top.php" />
		<hook hook="integrate_general_mod_settings" function="recent_top_settings" file="$sourcedir/Subs-recent_top.php" />
		<hook hook="integrate_credits" function="recent_top_credits" file="$sourcedir/Subs-recent_top.php" />
		<redirect url="?action=admin;area=modsettings;sa=general" timeout="5000" />
	</install>
	
	<uninstall for="2.1.*">
		<remove-file name="$sourcedir/Subs-recent_top.php" />
		<remove-file name="$sourcedir/Recent_top.php" />
		<remove-file name="$sourcedir/Recent_top_xml_output.php" />
		<remove-file name="$themedir/Recent_top.template.php" />
		<remove-file name="$languagedir/Recent_top.english.php" />
		<remove-file name="$languagedir/Recent_top.dutch.php" />
		<hook hook="integrate_actions" function="recent_top_action" file="$sourcedir/Subs-recent_top.php" reverse="true" />
		<hook hook="integrate_menu_buttons" function="recent_top__menu_button" file="$sourcedir/Subs-recent_top.php" reverse="true" />
		<hook hook="integrate_general_mod_settings" function="recent_top_settings" file="$sourcedir/Subs-recent_top.php" reverse="true" />
		<hook hook="integrate_credits" function="recent_top_credits" file="$sourcedir/Subs-recent_top.php" reverse="true" />
	</uninstall>

	<install for="2.0 - 2.99.99">
		<modification>install20.xml</modification>
		<database>install.php</database>
	</install>

	<uninstall for="2.0 - 2.99.99">
		<modification type="file" reverse="true">install20.xml</modification>
	</uninstall>

	<install for="1.1.1 - 1.1.99">
		<modification>install11.xml</modification>
		<code>install.php</code>
	</install>

	<uninstall for="1.1.1 - 1.1.99">
		<modification type="file" reverse="true">install11.xml</modification>
	</uninstall>
</package-info>
